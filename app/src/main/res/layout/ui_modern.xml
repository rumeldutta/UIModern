<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout_background"
    android:background="#60a3ff0b"
    android:orientation="vertical">
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colour_seekbar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="false"
        android:layout_margin="3dp"
        android:background="#cb003a" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCol1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCol2"
        android:layout_below="@+id/textViewCol1"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/colour_seekbar"
        android:layout_alignEnd="@+id/textViewCol1"
        android:layout_margin="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCol3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewCol1"
        android:layout_margin="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCol4"
        android:layout_below="@+id/textViewCol3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textViewCol1"
        android:layout_margin="3dp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewCol5"
        android:layout_below="@+id/textViewCol4"
        android:layout_alignEnd="@+id/textViewCol4"
        android:layout_toEndOf="@+id/textViewCol1"
        android:layout_above="@+id/colour_seekbar"
        android:layout_margin="3dp"/>


</RelativeLayout>
